<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.res.ResAddFoodItemActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="369dp"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/icon_back" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/yeonsungregular"
                android:text="Add Item"
                android:textSize="32sp"
                app:layout_constraintBottom_toBottomOf="@+id/ivBack"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivBack"
                app:layout_constraintTop_toTopOf="@+id/ivBack" />

            <EditText
                android:id="@+id/etFoodName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"

                android:background="@drawable/bg_et"
                android:ems="10"
                android:hint="Food Name"
                android:inputType="text"
                android:padding="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView20" />

            <EditText
                android:id="@+id/etFoodPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_et"
                android:ems="10"
                android:hint="Food Price"
                android:inputType="number"
                android:padding="20dp"
                app:layout_constraintEnd_toEndOf="@+id/etFoodName"
                app:layout_constraintStart_toStartOf="@+id/etFoodName"
                app:layout_constraintTop_toBottomOf="@+id/etFoodName" />


            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:text="Food Image"
                app:layout_constraintEnd_toEndOf="@+id/etFoodPrice"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@+id/etFoodPrice"
                app:layout_constraintTop_toBottomOf="@+id/etFoodPrice" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView5"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="@+id/etFoodPrice"
                app:layout_constraintStart_toStartOf="@+id/textView21"
                app:layout_constraintTop_toBottomOf="@+id/textView21">

                <ImageView
                    android:id="@+id/ivFoodImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/icon_upload" />
            </androidx.cardview.widget.CardView>

            <EditText
                android:id="@+id/etFoodDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_et"
                android:gravity="top|start"
                android:hint="Enter your text here"
                android:inputType="textMultiLine"
                android:lines="5"
                android:overScrollMode="always"
                android:padding="10dp"
                android:scrollbars="vertical"

                app:layout_constraintEnd_toEndOf="@+id/etFoodPrice"
                app:layout_constraintStart_toStartOf="@+id/etFoodPrice"
                app:layout_constraintTop_toBottomOf="@+id/cardView5" />

            <EditText
                android:id="@+id/etFoodIngredients"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="100dp"
                android:background="@drawable/bg_et"
                android:gravity="top|start"
                android:hint="Enter Your Food Ingidient"
                android:inputType="textMultiLine"
                android:lines="5"
                android:overScrollMode="always"
                android:padding="20dp"
                android:scrollbars="vertical"
                app:layout_constraintEnd_toEndOf="@id/etFoodDescription"
                app:layout_constraintStart_toStartOf="@id/etFoodDescription"
                app:layout_constraintTop_toBottomOf="@id/etFoodDescription" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAdd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="20dp"
                app:layout_constraintStart_toStartOf="@id/etFoodIngredients"
                app:layout_constraintEnd_toEndOf="@id/etFoodIngredients"
                app:layout_constraintTop_toBottomOf="@id/etFoodIngredients"
                android:background="@drawable/bg_primary_btn_green"
                android:text="Add"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:fontFamily="@font/yeonsungregular"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>